let numero = [5, 8, 2, 9, 300, 3, 40]
numero.push(1) // adicionar o valor 1 ao vetor
numero.sort() // método inteno para colocar em ordem

//console.log(`O vetor é o ${numero}`)

console.log(numero)
console.log(`O vetor tem ${numero.length} posições.`)
console.log(`O primeiro valor do vetor é ${numero[0]}`)

let posicao = numero.indexOf(1)

if (posicao == -1) {
    console.log(`O valor não foi encontrado!`)
} else {
    console.log(`O valor está na posição ${posicao}`)
}